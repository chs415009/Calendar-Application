<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.TodayController.TodayController">
    <left>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Navigation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="navigationList" VBox.vgrow="ALWAYS" />
        </VBox>
    </left>
    <center>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Tasks" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="taskListView" VBox.vgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Task" onAction="#handleAddTask" />
                <Button text="Delete Task" onAction="#handleDeleteTask" />
            </HBox>
            <!-- Task Details Section -->
            <VBox spacing="10" style="-fx-padding: 10;" VBox.vgrow="NEVER">
                <Label text="Task Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label fx:id="taskDetails" text="Select a task to view its details" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
