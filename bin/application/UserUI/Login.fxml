<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.UserUI.LoginController" alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    
    <!-- Title -->
    <Label text="To Do List" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <!-- Login Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1;">
        <!-- Username and Password Fields -->
        <TextField fx:id="usernameField" promptText="Enter Username" />
        <PasswordField fx:id="passwordField" promptText="Enter Password" />
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
    </VBox>

    <!-- Register Button -->
    <Button fx:id="registerButton" text="Register" onAction="#handleRegisterRedirect" />
</VBox>
