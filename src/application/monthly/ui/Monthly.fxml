<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.monthly.ui.MonthlyController" 
      alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
    <!-- 最大化視窗 -->
    <HBox fx:id="headerBox" alignment="CENTER" spacing="20" style="-fx-padding: 20;" prefHeight="100">
        <Button text="Previous" onAction="#handlePreviousMonth" style="-fx-font-size: 18;"/>
        <Label fx:id="monthLabel" style="-fx-font-size: 30; -fx-font-weight: bold;"/>
        <Button text="Next" onAction="#handleNextMonth" style="-fx-font-size: 18;"/>
    </HBox>
    
    <!-- 用 GridPane 顯示日期，並讓它保持在中間 -->
    <GridPane fx:id="calendarGrid" style="-fx-grid-lines-visible: true; -fx-padding: 20;" 
              hgap="5" vgap="5" alignment="CENTER" />
</VBox>
